<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/event_background"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="@dimen/margin_extra_large"
                android:src="@drawable/ic_menu" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_menu"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_extra_large"
                android:text="2dd : 21Hrs : 45Min : 33Sec"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_very_small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >
                
                <Button
                    android:id="@+id/btn_earn_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/margin_extra_large"
                    android:layout_marginRight="@dimen/margin_commentview_leftright"
                    android:background="@drawable/event_earn_coins"
                    android:text="EARN COINS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/margin_extra_large"
                    android:layout_marginRight="@dimen/margin_commentview_leftright"
                    android:background="@drawable/event_not_join"
                    android:text="JOIN"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_small" />
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/layout_header"
            android:layout_marginTop="-21dp"
            android:background="@drawable/event_description_background"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginTop="@dimen/margin_large"
                android:text="FREE"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginTop="@dimen/margin_commentview_leftright"
                android:text="BRUNO MARS"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginRight="@dimen/margin_very_large"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Bruno will be calling 30 of you!"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginRight="@dimen/margin_very_large"
                android:layout_marginTop="@dimen/margin_commentview_leftright"
                android:text="Step 1: Join the event"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginRight="@dimen/margin_very_large"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Step 2: Increase your changes by Earning Free Entries!"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_commentview_leftright"
                android:layout_marginRight="@dimen/margin_very_large"
                android:layout_marginTop="@dimen/margin_commentview_leftright"
                android:text="Say hello to Taylor Swift. Also known As #Swift, he&apos;s become a social media sensation within a blink of an eye. Taylor is prepiing content to share with his following very soon, stay tuned!"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_small" />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_commentview_leftright"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:id="@+id/layout_addcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="21"
                        android:textColor="@color/mid_grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ADD COINS"
                        android:textColor="@color/mid_grey"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_myevent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_events"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="37"
                        android:textColor="@color/mid_grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MY EVENTS"
                        android:textColor="@color/mid_grey"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
