<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/fragmentIncomeCall"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/infoAboutCall"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop = "true">

        <TextView
            android:id="@+id/callerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="User 5"
            android:padding="10dp"
            android:maxLines="1"
            android:maxLength="25"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp">

    <ImageButton
        android:id="@+id/rejectBtn"
        android:layout_width="100dp"
        android:layout_height="60dp"

        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:id="@+id/takeBtn"
        android:layout_width="100dp"
        android:layout_height="60dp"

        android:gravity="center_vertical"

        android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/Volumes/WORK/Android/AndroidStudioProjects/Waalah-Android/Waalah/waalah/src/main/res/layout/fragment_income_call.xml -->